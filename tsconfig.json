{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "checkJs": false,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": false,
        "noEmit": true,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2015", "dom"]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.js",
        "**/*.test.ts"
    ]
}